# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias aliases='vim ~/.dotfiles/bash/aliases'
alias bake='bundle exec rake'
alias be='bundle exec'
alias matt='ssh msimpson@coffeencoke.com'
alias bi='bundle install'
alias be='bundle exec'
alias bu='bundle update'
alias bunbang='bundle install && !!'
alias p='cd ~/Projects'
alias d='cd ~/.dotfiles'
alias gad='git add .'
alias gc='git commit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gg='git lg'
alias gpush='git push'
alias gpr='git pull --rebase'
alias grc='git rebase --continue'
alias irb='irb --readline -r irb/completion'
alias killruby='killall -9 ruby'
alias patch='git format-patch HEAD^ --stdout > patch.diff'
alias remore='!! | more'
alias reguard='killall -9 ruby ; guard'
alias rerake='!! && rake'
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log *'
alias repush="gpr && gpush"
alias rc='rails console'
alias safepush='git pull --rebase && bundle install && rdm && rake && git push'
alias so='source ~/.dotfiles/bash/aliases'
alias sp='safepush'
alias u='cd ..'
alias vi='vim'
alias gst='git status'
alias mysql_start='mysql.server start'
alias mysql_stop='mysql.server stop'
alias mysql_restart='mysql.server restart'
alias l='ls -lha'
alias c='clear'
alias wget="curl -O"

